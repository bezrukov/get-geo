#!/usr/bin/env php
<?php

namespace Bezrukov\GetGeo;

require_once __DIR__.'/../vendor/autoload.php';

use Commando\Command;

$cmd = new Command();

$cmd->option('i')
    ->require(false)
    ->describedAs('IP address');

$ip = $cmd['i'];

$getGeoIp = new GeoIp();

$GeoIpInfo = $getGeoIp->getInfoFromIp($ip);

print_r($GeoIpInfo->city);

